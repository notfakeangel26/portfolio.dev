---
import Layout from "../layouts/Layout.astro";
import LinkedinIcon from "../components/icons/Linkedin.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import MailIcon from "../components/icons/Mail.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Code from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout
	title="Portfolio de Angel - Desarrollador y Programador Web"
	description="Contrata a Angel como desarrollador web o movil."
>
	<main class="px-4"> 
		<SectionContainer class="py-44 pb-20">
			<img
				class="rounded-full w-12 h-12 mb-4"
				src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png"
				alt="angel-photo"
			/>
			<h1
				class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
			>
				Hola, soy Angel Cancho <a
					href="https://linkedin.com/in/angel-cancho"
					target="_blank"
					class="flex justify-center items-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[7 00px]">
				Estudiante de Ingeniería de Software de lima, Perú. Estudio en la Universidad Peruana de Ciencias Aplicadas (UPC), con un enfoque principal en el desarrollo backend y un interés en el desarrollo full stack. He adquirido habilidades prácticas en Java, Spring Boot, gestión de bases de datos relacionales como MySQL y desarrollo frontend con Angular, a través de proyectos académicos y personales. Mi objetivo es aplicar y expandir estos conocimientos en un entorno profesional, contribuyendo al desarrollo de aplicaciones eficientes y escalables, mientras continúo fortaleciendo mis competencias en frontend para convertirme en un desarrollador full stack completo.
			</h2>

			<nav class="flex gap-x-4 mt-8 flex-wrap">
				<SocialPill href="https://linkedin.com/in/angel-cancho">
					<LinkedinIcon class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>

				<SocialPill href="https://github.com/notfakeangel26">
					<GitHubIcon class="size-4 md:size-6" />
					GitHub
				</SocialPill>

				<SocialPill href="mailto:angelcca2001@gmail.com">
					<MailIcon class="size-4 md:size-6" />
					Email
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Code class="size-7"/>
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

	</main>
</Layout>
